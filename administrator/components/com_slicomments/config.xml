<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset name="EXTENSION_SPECIFIC">
		<field
			name="extension"
			type="form"
			hidden="true"/>
	</fieldset>


	<fieldset name="HTML_BBCODE">

		<fields name="html">
		<field
			name="allow"
			type="radio"
			label="COM_COMMENTS_ALLOW_HTML_LABEL"
			description="COM_COMMENTS_ALLOW_HTML_DESC"
			default="0">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
		</field>
		</fields>

		<fields name="bbcode">
		<field
			name="enabled"
			type="radio"
			label="COM_COMMENTS_ENABLE_BBCODE_LABEL"
			description="COM_COMMENTS_ENABLE_BBCODE_DESC"
			default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
		</field>

		<field
			type="spacer"
			label="COM_COMMENTS_BBCODE_FILTERS_LABEL"
			description="COM_COMMENTS_BBCODE_FILTERS_DESC"/>

		<field
			type="spacer"
			hr="true"/>

		<fields name="filters">
		<field
			name="default"
			type="radio"
			label="COM_COMMENTS_BBCODE_FILTERS_DEFAULT_LABEL"
			description="COM_COMMENTS_BBCODE_FILTERS_DEFAULT_DESC"
			default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
		</field>

		<field
			name="text"
			type="radio"
			label="COM_COMMENTS_BBCODE_FILTERS_TEXT_LABEL"
			description="COM_COMMENTS_BBCODE_FILTERS_TEXT_DESC"
			default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
		</field>

		<field
			name="block"
			type="radio"
			label="COM_COMMENTS_BBCODE_FILTERS_BLOCK_LABEL"
			description="COM_COMMENTS_BBCODE_FILTERS_BLOCK_DESC"
			default="0">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
		</field>

		<field
			name="image"
			type="radio"
			label="COM_COMMENTS_BBCODE_FILTERS_IMAGE_LABEL"
			description="COM_COMMENTS_BBCODE_FILTERS_IMAGE_DESC"
			default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
		</field>

		<field
			name="list"
			type="radio"
			label="COM_COMMENTS_BBCODE_FILTERS_LIST_LABEL"
			description="COM_COMMENTS_BBCODE_FILTERS_LIST_DESC"
			default="0">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
		</field>

		<field
			name="quote"
			type="radio"
			label="COM_COMMENTS_BBCODE_FILTERS_QUOTE_LABEL"
			description="COM_COMMENTS_BBCODE_FILTERS_QUOTE_DESC"
			default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
		</field>

		<field
			name="url"
			type="radio"
			label="COM_COMMENTS_BBCODE_FILTERS_URL_LABEL"
			description="COM_COMMENTS_BBCODE_FILTERS_URL_DESC"
			default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
		</field>

		<field
			name="video"
			type="radio"
			label="COM_COMMENTS_BBCODE_FILTERS_VIDEO_LABEL"
			description="COM_COMMENTS_BBCODE_FILTERS_VIDEO_DESC"
			default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
		</field>

		<field
			name="code"
			type="radio"
			label="COM_COMMENTS_BBCODE_FILTERS_CODE_LABEL"
			description="COM_COMMENTS_BBCODE_FILTERS_CODE_DESC"
			default="0">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
		</field>

		<field
			name="email"
			type="radio"
			label="COM_COMMENTS_BBCODE_FILTERS_EMAIL_LABEL"
			description="COM_COMMENTS_BBCODE_FILTERS_EMAIL_DESC"
			default="0">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
		</field>
		</fields>

		<field
			name="whitelist"
			type="text"
			label="COM_COMMENTS_BBCODE_WHITELIST_LABEL"
			description="COM_COMMENTS_BBCODE_WHITELIST_DESC"
			default=""/>
		</fields>
	</fieldset>

	<fieldset name="emoticons">
		<field
			name="emoticons_enabled"
			type="radio"
			label="COM_COMMENTS_ENABLE_EMOTICONS_LABEL"
			description="COM_COMMENTS_ENABLE_EMOTICONS_DESC"
			default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
		</field>

		<field
			type="spacer"
			hr="true"/>

		<field
			name="emoticons"
			type="emoticons"/>
	</fieldset>

	<fieldset name="FORM">
		<field
			name="name"
			type="list"
			label="COM_COMMENTS_SHOW_NAME_LABEL"
			description="COM_COMMENTS_SHOW_NAME_DESC"
			default="1">
				<option value="-1">COM_COMMENTS_OPTION_DISABLE_VALUE</option>
				<option value="0">COM_COMMENTS_OPTION_UNREQUIRED_VALUE</option>
				<option value="1">COM_COMMENTS_OPTION_REQUIRED_VALUE</option>
		</field>

		<field
			name="email"
			type="list"
			label="COM_COMMENTS_SHOW_EMAIL_LABEL"
			description="COM_COMMENTS_SHOW_EMAIL_DESC"
			default="1">
				<option value="-1">COM_COMMENTS_OPTION_DISABLE_VALUE</option>
				<option value="0">COM_COMMENTS_OPTION_UNREQUIRED_VALUE</option>
				<option value="1">COM_COMMENTS_OPTION_REQUIRED_VALUE</option>
		</field>

		<field
			name="minimum_chars"
			type="text"
			label="COM_COMMENTS_MINIMUM_CHARS_LABEL"
			description="COM_COMMENTS_MINIMUM_CHARS_DESC"
			default="5"
			size="5"/>

		<field
			name="maximum_chars"
			type="text"
			label="COM_COMMENTS_MAXIMUM_CHARS_LABEL"
			description="COM_COMMENTS_MAXIMUM_CHARS_DESC"
			default="500"
			size="5"/>

		<field
			name="show_character_counter"
			type="radio"
			label="COM_COMMENTS_SHOW_CHARACTER_COUNTER_LABEL"
			description="COM_COMMENTS_SHOW_CHARACTER_COUNTER_DESC"
			default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
		</field>
	</fieldset>

	<fieldset name="LAYOUT">
		<field
			name="ratings"
			type="radio"
			label="COM_COMMENTS_ENABLE_RATINGS_LABEL"
			description="COM_COMMENTS_ENABLE_RATINGS_DESC"
			default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
		</field>

		<field
			name="limit"
			type="integer"
			label="COM_COMMENTS_LIMIT_LABEL"
			description="COM_COMMENTS_LIMIT_DESC"
			default="20"
			first="5"
			last="100"
			step="5">
				<option value="0">JALL</option>
		</field>

		<field
			name="top_comments"
			type="integer"
			label="COM_COMMENTS_TOP_COMMENTS_LABEL"
			description="COM_COMMENTS_TOP_COMMENTS_DESC"
			default="0"
			first="1"
			last="10"
			step="1">
				<option value="0">JNONE</option>
		</field>

		<field
			name="top_comments_criteria"
			type="list"
			label="COM_COMMENTS_TOP_COMMENTS_CRITERIA_LABEL"
			description="COM_COMMENTS_TOP_COMMENTS_CRITERIA_DESC"
			default="score"
			validate="options">
				<option value="score">COM_COMMENTS_OPTION_SCORE</option>
				<option value="hot">COM_COMMENTS_OPTION_HOT</option>
				<option value="positive_votes">COM_COMMENTS_OPTION_POSITIVE_VOTES</option>
		</field>

		<field
			name="top_comments_threshold"
			type="integer"
			label="COM_COMMENTS_TOP_COMMENTS_THRESHOLD_LABEL"
			description="COM_COMMENTS_TOP_COMMENTS_THRESHOLD_DESC"
			default="3"
			first="2"
			last="20"
			step="1" />

		<field
			name="field_name"
			type="list"
			label="COM_COMMENTS_FIELD_NAME_LABEL"
			description="COM_COMMENTS_FIELD_NAME_DESC"
			default="name"
			validate="options">
				<option value="name">COM_COMMENTS_OPTION_NAME</option>
				<option value="username">COM_COMMENTS_OPTION_USERNAME</option>
		</field>

		<field
			name="link"
			type="components"
			label="COM_COMMENTS_LINK_LABEL"
			description="COM_COMMENTS_LINK_DESC"
			default="">
				<option value="">JNO</option>
				<option value="com_community">COM_COMMENTS_OPTION_JOMSOCIAL</option>
				<option value="com_kunena">COM_COMMENTS_OPTION_KUNENA</option>
				<option value="com_comprofiler">COM_COMMENTS_OPTION_COMPROFILER</option>
		</field>

		<field
			name="avatar"
			type="components"
			label="COM_COMMENTS_AVATAR_LABEL"
			description="COM_COMMENTS_AVATAR_DESC"
			default="gravatar">
				<option value="0">JNONE</option>
				<option value="gravatar">COM_COMMENTS_OPTION_GRAVATAR</option>
				<option value="com_community">COM_COMMENTS_OPTION_JOMSOCIAL</option>
				<option value="com_kunena">COM_COMMENTS_OPTION_KUNENA</option>
				<option value="com_k2">COM_COMMENTS_OPTION_K2</option>
				<option value="com_comprofiler">COM_COMMENTS_OPTION_COMPROFILER</option>
		</field>

		<fields name="gravatar">
			<field
				name="rating"
				type="list"
				label="COM_COMMENTS_GRAVATAR_RATING_LABEL"
				description="COM_COMMENTS_GRAVATAR_RATING_DESC"
				default="g">
					<option value="g">G</option>
					<option value="pg">PG</option>
					<option value="r">R</option>
					<option value="x">X</option>
			</field>

			<field
				name="default"
				type="list"
				label="COM_COMMENTS_GRAVATAR_DEFAULT_LABEL"
				description="COM_COMMENTS_GRAVATAR_DEFAULT_DESC"
				default="mm">
					<option value="mm">Mystery-man</option>
					<option value="identicon">Geometric pattern</option>
					<option value="monsterid">Monster</option>
					<option value="wavatar">Faces</option>
					<option value="retro">8-bit arcade-style</option>
			</field>
		</fields>

		<field
			name="avatar_default"
			type="media"
			label="COM_COMMENTS_AVATAR_DEFAULT_LABEL"
			description="COM_COMMENTS_AVATAR_DEFAULT_DESC"
			default=""/>

		<field
			name="hide_low_rated"
			type="integer"
			label="COM_COMMENTS_HIDE_LOW_RATED_LABEL"
			description="COM_COMMENTS_HIDE_LOW_RATED_DESC"
			default="0"
			first="1"
			last="20"
			step="1">
				<option value="0">JNO</option>
		</field>

		<field
			name="hide_flagged"
			type="integer"
			label="COM_COMMENTS_HIDE_FLAGGED_LABEL"
			description="COM_COMMENTS_HIDE_FLAGGED_DESC"
			default="0"
			first="1"
			last="20"
			step="1">
				<option value="0">JNO</option>
		</field>

		<field
			name="show_rss_icon"
			type="radio"
			label="COM_COMMENTS_SHOW_RSS_ICON_LABEL"
			description="COM_COMMENTS_SHOW_RSS_ICON_DESC"
			default="0">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
		</field>
	</fieldset>

	<fieldset name="restrictions">
		<field
			name="check_names"
			type="radio"
			label="COM_COMMENTS_CHECK_NAMES_LABEL"
			description="COM_COMMENTS_CHECK_NAMES_DESC"
			default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
		</field>

		<field
			name="forbidden_names"
			type="textarea"
			cols="35"
			rows="4"
			label="COM_COMMENTS_FORBIDDEN_NAMES_LABEL"
			description="COM_COMMENTS_FORBIDDEN_NAMES_DESC"
			default="admin, administrator, moderator"/>

		<field
			name="blocked_emails"
			type="textarea"
			cols="35"
			rows="4"
			label="COM_COMMENTS_BLOCKED_EMAILS_LABEL"
			description="COM_COMMENTS_BLOCKED_EMAILS_DESC"
			default=""/>

		<field
			name="censored_words"
			type="textarea"
			cols="35"
			rows="4"
			label="COM_COMMENTS_CENSORED_WORDS_LABEL"
			description="COM_COMMENTS_CENSORED_WORDS_DESC"
			default=""/>

		<field
			name="blocked_ips"
			type="textarea"
			cols="35"
			rows="4"
			label="COM_COMMENTS_BLOCKED_IPS_LABEL"
			description="COM_COMMENTS_BLOCKED_IPS_DESC"
			default=""/>

	</fieldset>

	<fieldset
		name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		addfieldpath="/administrator/components/com_slicomments/models/fields"
		>

		<field
			name="rules"
			type="Permissions"
			label="JCONFIG_PERMISSIONS_LABEL"
			filter="rules" />
	</fieldset>
</config>